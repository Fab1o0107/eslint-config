{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["github>Fab1o0107/renovate-config"],
    "baseBranches": ["main"],
    "npm": {
        "packageRules": [{
            "matchPackagePatterns": ["@clytage/eslint-config", "@typescript-eslint", "eslint"],
            "groupName": "ESLint Dependencies"
        }, {
            "matchPackagePatterns": ["@types", "typescript"],
            "groupName": "TypeScript Dependencies"
        }]
    }
}
